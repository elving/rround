.settings
    background url('../img/settings-bg.png') repeat 0 0 #f8f8f8
    box-shadow 0 -1px 6px rgba(0,0,0,0.1), 0 1px 0 #fff inset
    border-top 1px solid #bbb
    bottom -85px
    padding 10px
    position fixed
    text-shadow 1px 1px 0 #fff
    width 100%
    z-index 40

    &.is-visible
        bottom -1px

.settings-radius
    height 30px
    margin-top 4px

    .settings-radiusControl
        background #eee
        border 1px solid #ccc
        border-radius 25px
        box-shadow 0 1px 2px rgba(0, 0, 0, 0.1) inset
        box-sizing: content-box
        border-top-color #c0c0c0
        cursor pointer
        float: left
        height 10px
        margin 8px 25px 0 10px
        width 250px

        .ui-slider-handle
            background linear-gradient(top,  #ffffff 0%, #e5e5e5 100%)
            box-sizing: content-box
            border 1px solid #bbb
            border-radius 25px
            box-shadow 0 1px 2px rgba(0, 0, 0, 0.1)
            cursor pointer
            height 24px
            top -9px
            width 24px

            &::before
                background #ddd
                border 1px solid #bbb
                border-radius 25px
                box-shadow 0 1px 0 #fff
                content ''
                display block
                height 10px
                margin 6px auto 0
                width 10px

        .ui-slider-range
            background linear-gradient(top,  #00a7e4 0%, #007fba 100%)
            box-sizing content-box
            border 1px solid #184879
            border-radius 25px
            box-shadow 0 1px 0 rgba(255,255,255,0.4) inset
            margin -1px

    .settings-radiusText
        margin-top 5px
        font-size 18px

.settings-services
    margin -14px 0 0 -175px
    left 50%
    position absolute
    top 50%
    width 350px

    .settings-service
        display inline-block
        border-radius 3px
        border 1px solid #ccc
        height 32px
        margin-left 5px
        position relative
        width 80px

        &:first-child
            margin-left 0

        &::before, &::after
            box-shadow 0 1px 0 rgba(255,255,255,0.4) inset
            line-height 30px
            font-size 14px
            text-align center
            width 39px

        &::before
            background linear-gradient(top,  #00a7e4 0%, #007fba 100%)
            border 1px solid #184879
            border-right 0 none
            border-radius 3px 0 0 3px
            content "ON"
            color #fff
            float left
            margin -1px
            text-shadow  1px 1px 0 #184879

        &::after
            background linear-gradient(top, #ffffff 0%, #e5e5e5 100%)
            border 1px solid #ccc
            border-left 0 none
            border-radius 0 3px 3px 0
            content "OFF"
            color #444
            float right
            margin -1px
            text-shadow 1px 1px 0 #fff

        .settings-service-check
            display none

            &:checked + .settings-service-toggle
                border-radius 0 3px 3px 0
                left 39px

        .settings-service-toggle
            background linear-gradient(top, #ffffff 0%, #e5e5e5 100%)
            display block
            width 40px
            height 32px
            border-radius 3px 0 0 3px
            border 1px solid #ccc
            text-align center
            position absolute
            top -1px
            left -1px

            i
                color #999
                font-size 27px
                line-height 32px
                text-shadow 0 1px 0 #fff

.settings-search
    appearance none
    background #FEFEFE
    border 1px solid #CCC
    border-radius 4px
    box-shadow 0 0 6px rgba(0,0,0,0.20) inset, 0 1px 0 #fff
    line-height 18px
    margin-top 3px
    padding 6px 0 5px
    transition all 0.3s linear
    text-indent 8px
    outline 0 none
    width 120px

    &:focus
        transform translateZ(0)
        width 220px

.icon-search
    font-size 20px
    color #888
    margin-right 5px
    vertical-align middle
